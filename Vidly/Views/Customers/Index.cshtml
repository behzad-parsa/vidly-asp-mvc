@model IEnumerable<Vidly.Models.Customer>
@{ ViewBag.Title = "Index";
                Layout = "~/Views/Shared/_Layout.cshtml"; }


<div class="container">
    <h2>List Of Our Customers</h2>
    <table class="table table-hover">
        <thead>
            <tr>
                <th style="font-size:20px">Customer</th>
            </tr>
        </thead>
        @if (!Model.Any())
        {
<tr>We Don't Have Any customers</tr> }
            else
            {

<tbody>
    @foreach (var item in Model)
    {
<tr><td>@Html.ActionLink(item.Name, "Detail", "Customers", new { id = item.Id }, null)</td></tr>                }



</tbody>}



    </table>



</div>