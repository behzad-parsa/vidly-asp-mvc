@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@if (!Model.Any())
{
    <p>There isn't any movie on the list</p> }
else
{
    <table class="table table-hover">
        <tr>
            <th>Movie Name</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr><td>@item.Name</td></tr>
}


    </table>
}
