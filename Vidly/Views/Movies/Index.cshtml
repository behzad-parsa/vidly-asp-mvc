@section scripts{


    <script>
        $(document).ready(function () {
            $("#movies").dataTable({
                
                ajax: {
                    url: "api/movies/",
                    dataSrc: ""
                },
                columns: [
                    {
                        width:"45%",
                        data: "name",
                        render: function (data , type , movie) {
                            return "<a href=@Url.Action("Detail", "Movies")?id="+movie.id+">" + movie.name + "</a>";
                        }
                    },
                    {
                        width: "35%",
                        
                        data: "name"

                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<a  href='@Url.Action("Edit", "Movies")?id=" + data + "' class='btn btn-primary'> <i class='material-icons' style='font-size:12px;margin-top:3px'>edit</i></a>" +
                                "<a  href='@Url.Action("Edit", "Movies")?id=" + data +"' class='btn btn-danger'> <i class='material-icons' style='font-size:12px;margin-top:3px'>delete</i></a>";
                        }
                    }

                ]



            });




        });


    </script>









