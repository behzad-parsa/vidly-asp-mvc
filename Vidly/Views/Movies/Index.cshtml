@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    th {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-size : 2rem;
        text-align : center;
    }
    tr  {
        font-family: Roboto;
        font-size: 1.5rem;
        text-align: center;
        width:100px;
    }
    .btn-new-movie{
        padding:8px;
        font-family :'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin-bottom : 10px;
        font-size : 1.5rem;
        width : 200px;
    }
</style>



<h2>Movies</h2>

@Html.ActionLink("NEW MOVIE" , "NewMovie" , "Movies" , new {@class= "btn btn-primary btn-new-movie" })


@if (!Model.Any())
{
    <p>There isn't any movie on the list</p>
    
    }
else
{
    <table class="table table-hover table-bordered">
        <tr  >
            <th width="60%">Movie Name</th>
            <th width="40%">Genre</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr >
                <td>@Html.ActionLink(item.Name , "Detail" , "Movies" , new { id = item.Id} , null) | 
                @Html.ActionLink("Edit" , "Edit" , "Movies" , new { id = item.Id} , null) </td>
                
                <td>@item.Genre.Name</td>
            </tr>
}           


    </table>
}
